<Window x:Class="Dz_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dz_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbInput" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Type something to reverse!!!" Width="324" TextChanged="TextBox_TextChanged" Height="47" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Button x:Name="btn" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,98,0,0" Height="38" Width="161" Click="Button_Click"/>

    </Grid>
</Window>
